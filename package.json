{
  "name": "web-file-server-api",
  "version": "0.0.1",
  "description": "A web-server API to serve file contents over HTTP.",
  "author": "mattgoespro",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "debug": "nodemon --config nodemon.json ./src/index.ts",
    "run": "node ./dist/index.js",
    "build": "cross-env API_SERVER_PORT=3000 MEDIA_DIR=media webpack --config webpack.config.ts --mode production",
    "build:mock-media-files": "tsc -p ./test/tsconfig.json",
    "docker:build": "docker build -t web-file-server-api .",
    "docker:start": "docker compose up --build -d"
  },
  "dependencies": {
    "express": "^4.19.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-import-resolver-webpack": "^0.13.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
