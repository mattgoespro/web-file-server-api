{
  "include": ["src", "tsconfig.test.json"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": null,
    "esModuleInterop": true,
    "declaration": false,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
