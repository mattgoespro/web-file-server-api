{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nodemon: debug",
      "type": "npm",
      "script": "start",
      "detail": "Debug the server with nodemon.",
      "problemMatcher": [
        {
          "base": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^[nodemon] \\d\\.\\d\\.\\d$",
            "endsPattern": "^Starting `ts-node ./.*$"
          }
        }
      ],
      "options": {
        "env": {
          "API_SERVER_PORT": "3000",
          "MEDIA_DIR": "${workspaceFolder}\\media"
        }
      },
      "dependsOn": ["build: mock media files"]
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "detail": "Build the project.",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$ts-webpack"]
    },
    {
      "label": "build: mock media files",
      "type": "npm",
      "script": "build:mock-media-files",
      "detail": "Build mock media files for testing the API.",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "docker: build",
      "type": "npm",
      "script": "docker:build",
      "detail": "Build the API Docker image.",
      "dependsOn": ["build: mock media files"]
      // "problemMatcher": [
      //   {
      //     "background": {
      //       "activeOnStart": true,
      //       "beginsPattern": "^\\[\\+\\] Building .* FINISHED$",
      //       "endsPattern": "^(Successfully built|Successfully tagged).*$"
      //     }
      //   }
      // ]
    },
    {
      "label": "docker: start",
      "type": "npm",
      "script": "docker:start",
      "detail": "Start the API in a Docker container.",
      "dependsOn": ["build: mock media files"],
      "options": {
        "env": {
          "MEDIA_DIR": "${workspaceFolder}\\media"
        }
      }
    }
  ]
}
